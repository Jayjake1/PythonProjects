import random 
#words = ['antman','spiderman','wasp']
sys_word = random.choice(word_list)
print(logo)
count = 6
end_game = False
display=[]
for _ in range(len(sys_word)):
  display += '_'
print(display)

while not end_game:
  user_input = input('enter the letter:').lower()  
  for position in range(len(sys_word)):
    letter = sys_word[position]
    if letter == user_input:
      display[position] = letter
    # else:
    #   count -= 1
  print(display)  
  if user_input not in sys_word:
    count -= 1
    if count == 0:
      end_game = True
      print('---> Game ended <---')
  if '_' not in display:
    end_game = True
    print('You win..')
  print(stages[count])    
